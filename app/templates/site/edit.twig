{% extends "layout.twig" %}
{% block content %}
    <div id="page-wrapper" >
        <div class="col-lg-12">
            <h1 class="page-header">Настройки сайта - Редактировать</h1>
        </div>
        <form id="site-edit-form">
          <div class="form-group">
            <input type="hidden" value="{{site.id}}" name="id" />
            <input type="hidden" value="{{site.owner_id}}" name="owner_id" />
            <label for="site">Адрес сайта</label>
            <input type="text" class="form-control" name="site_name" id="site" placeholder="Site" value="{{site.site_name}}">
          </div>
          <div class="form-group">
            <label for="widgetSettings">Настройки виджета</label>
            <textarea class="form-control" name="widget_settings" id="widgetSettings" placeholder="valid json">{{site.widget_settings}} </textarea>
          </div>
          <button type="submit" class="btn btn-primary">Сохранить</button>
        </form>
    </div>
<script src="/js/site/edit.js"></script>    
{% endblock %}