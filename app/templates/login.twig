{% extends "Layout.twig" %}

{% block content %}
    <div class="container">
        <div class="row">
            {% include 'flash.twig' %}
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">Вход</div>
                    <div class="panel-body">
                        <form action="{{ path_for('auth.signin') }}" method="post" autocomplete="off">
                            <div class="form-group{{ errors.login ? ' has-error' : '' }}">
                                <input type="text" name="login" id="login" placeholder="Username" value="{{ old.login }}"
                                       class="form-control">
                                {% if errors.login %}
                                    <span class="help-block"> {{ errors.login | first }} </span>
                                {% endif %}
                            </div>
                            <div class="form-group{{ errors.password ? ' has-error' : '' }}">
                                <input type="password" name="password" id="password" placeholder="Password" value="{{ old.password }}"
                                       class="form-control">
                                {% if errors.password %}
                                    <span class="help-block"> {{ errors.password | first }} </span>
                                {% endif %}
                            </div>
                            <button type="submit" class="btn btn-lg btn-success btn-block">Войти</button>

                            {{ csrf.field | raw }}
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
